{
  "title": "Informações do Evento",
  "type": "object",
  "required": [
    "originEventNumber", "eventCity", "eventState", "eventValue",
    "eventInitialDate", "eventFinalDate"
  ],
  "properties": {
    "originEventNumber": {
      "type": "string",
      "title": "Número origem:"
    },
    "eventInitialDate": {
      "type": "string",
      "format": "date",
      "title": "Data inicial do fato:"
    },
    "eventFinalDate": {
      "type": "string",
      "format": "date",
      "title": "Data final do fato:"
    },
    "eventCity": {
      "type": "string",
      "title": "Cidade:"
    },
    "eventState": {
      "type": "string",
      "title": "UF:",
      "enum": [
        "AC", "AL", "AP", "AM", "BA", "CE",
        "DF", "ES", "GO", "MA", "MT", "MS",
        "MG", "PA", "PB", "PR", "PE", "PI",
        "RJ", "RN", "RS", "RO", "RR", "SC",
        "SP", "SE", "TO"
      ],
      "enumNames": [
        "Acre", "Alagoas", "Amapá", "Amazonas", "Bahia", "Ceara",
        "Distrito Federal", "Espírito Santo", "Goiás", "Maranhão",
        "Mato Grosso", "Mato Grosso do Sul", "Minas Gerais", "Pará",
        "Paraíba", "Paraná", "Pernambuco", "Piauí", "Rio de Janeiro",
        "Rio Grande do Norte", "Rio Grande do Sul", "Rondônia",
        "Roraima", "Santa Catarina", "São Paulo", "Sergipe", "Tocantins"
      ]
    },
    "eventValue": {
      "type": "number",
      "title": "Valor da(s) operação(ões):"
    },
    "eventAssociatedPeople": {
      "title": "Pessoa(s) envolvida(s)",
      "type": "array",
      "items": {
        "$ref": "#/definitions/person"
      }
    }
  },
  "definitions": {
    "person": {
      "type": "object",
      "required": [
        "personQualification"
      ],
      "properties": {
        "personQualification": {
          "type": "string",
          "title": "Tipo de relação envolvida:",
          "enum": [
            "", "Beneficiário Final", "Outros",
            "Procurador / Representante Legal",
            "Titular"
          ],
          "default": "Titular"
        },
        "personIsPoliticallyExposed": {
          "type": "boolean",
          "title": "Pessoa Politicamente Exposta",
          "defautl": false
        },
        "personIsObliged": {
          "type": "boolean",
          "title": "Pessoa Obrigada",
          "default": false
        },
        "personIsGovernmentEmployee": {
          "type": "string",
          "title": "Servidor Público:",
          "enum": [
            "Não", "Sim", "SPF", "SPE", "SPM"
          ],
          "default": "Não"
        },
        "personName": {
          "type": "string",
          "title": "Nome:"
        },
        "personId": {
          "type": "string",
          "title": "CPF / CNPJ:"
        }
      }
    }
  }
}